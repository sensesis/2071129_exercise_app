<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="25dp"
        android:background="@color/colorPrimary"
        >

        <TextView
            android:id="@+id/weight1"
            android:layout_width="65dp"
            android:layout_height="50dp"
            android:text="null"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:textStyle="bold"
            android:background="@drawable/round"

            />

        <TextView
            android:id="@+id/weight2"
            android:layout_width="65dp"
            android:layout_height="50dp"
            android:text="null"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:textStyle="bold"
            android:background="@drawable/round"/>

        <TextView
            android:id="@+id/weight3"
            android:layout_width="65dp"
            android:layout_height="50dp"
            android:text="null"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:textStyle="bold"
            android:background="@drawable/round"/>

        <TextView
            android:id="@+id/weight4"
            android:layout_width="65dp"
            android:layout_height="50dp"
            android:text="null"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:textStyle="bold"
            android:background="@drawable/round"/>

        <TextView
            android:id="@+id/weight5"
            android:layout_width="65dp"
            android:layout_height="50dp"
            android:text="null"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:textStyle="bold"
            android:background="@drawable/round"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        >

        <TextView
            android:id="@+id/partText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="진기태"
            android:gravity="center"
            android:padding="4dp"
            android:layout_marginLeft="15dp"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"/>

        <TextView
            android:id="@+id/dateText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2024-06-11"
            android:gravity="center"
            android:padding="4dp"
            android:layout_marginLeft="15dp"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"/>


        <TextView
            android:id="@+id/weightAvgText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="평균시간: 25.0"
            android:gravity="center"
            android:padding="4dp"
            android:layout_marginLeft="25dp"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"/>

        <TextView
            android:id="@+id/timeAvgText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="평균무게: 25.0"
            android:gravity="center"
            android:padding="4dp"
            android:layout_marginLeft="30dp"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"/>

    </LinearLayout>
</LinearLayout>